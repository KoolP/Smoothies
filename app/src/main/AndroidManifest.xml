<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.koolsport.smoothie">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="se.koolsport.smoothies.TopLevelActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="se.koolsport.smoothies.DrinkCategoryActivity"
            android:label="@string/smoothies_category"
            android:parentActivityName="se.koolsport.smoothies.TopLevelActivity"/>
        <activity android:name="se.koolsport.smoothies.DrinkActivity"
            android:label="@string/smoothies_category"
            android:parentActivityName="se.koolsport.smoothies.DrinkCategoryActivity"/>
        <activity
            android:name="se.koolsport.smoothies.AddSmoothiesActivity"
            android:label="@string/addSmoothie"
            android:parentActivityName="se.koolsport.smoothies.DrinkCategoryActivity"/>
        </application>


</manifest>